#!/bin/sh

case "$1" in
start)
    echo "Starting lddmodules"
    modprobe hello
    modprobe faulty
    modprobe scull
    /bin/module_load aesdchar
    ;;
stop)
    echo "Stopping lddmodules"
    rmmod hello
    rmmod faulty
    rmmod scull
    /bin/module_unload aesdchar
    ;;
*)
    echo "Usage: $0 start/stop"
    exit 1
    ;;
esac
exit 0
